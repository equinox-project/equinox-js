{
  "name": "hotel",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsup src/entrypoints/*.ts --clean --format cjs --sourcemap",
    "lint": "tsc -p . --noEmit",
    "test": "vitest run",
    "explorer": "NODE_PATH=./node_modules eqx-explorer -cs $MDB_RO_CONN_STR -c ./src/explorer-config.ts",
    "create-db": "createdb --host 127.0.0.1 -U postgres equinox_hotel",
    "migrate:message-db": "pg-migrations apply --database $DBURL_ADMIN --directory ./node_modules/@equinox-js/message-db/migrations --version-table mdb_migrations_version --migrations-table mdb_migrations_applied",
    "migrate:app": "pg-migrations apply --database $DBURL_ADMIN --directory ./migrations",
    "migrate": "pnpm migrate:message-db && pnpm migrate:app"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.410.0",
    "@equinox-js/core": "workspace:*",
    "@equinox-js/dynamo-store": "workspace:*",
    "@equinox-js/dynamo-store-cdk": "workspace:*",
    "@equinox-js/dynamo-store-source": "workspace:*",
    "@equinox-js/memory-store": "workspace:*",
    "@equinox-js/message-db": "workspace:*",
    "@equinox-js/message-db-source": "workspace:*",
    "@equinox-js/projection-pg": "workspace:*",
    "@equinox-js/propeller": "workspace:*",
    "@js-joda/core": "^5.6.1",
    "@opentelemetry/api": "^1.4.0",
    "@opentelemetry/instrumentation-http": "^0.41.0",
    "@opentelemetry/instrumentation-pg": "^0.36.0",
    "@opentelemetry/sdk-node": "^0.41.0",
    "@opentelemetry/sdk-trace-base": "^1.9.0",
    "@opentelemetry/sdk-trace-node": "^1.9.0",
    "immer": "^10.0.3",
    "opentelemetry-exporter-console-pretty": "^1.0.1",
    "pg": "^8.0.0",
    "variant": "^2.1.0"
  },
  "devDependencies": {
    "@databases/pg-migrations": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.0.0",
    "@types/ramda": "^0.28.21",
    "aws-cdk": "2.95.0",
    "aws-cdk-lib": "2.95.0",
    "constructs": "^10.0.0",
    "p-limit": "^4.0.0",
    "ts-node": "^10.9.1",
    "tsup": "^8.0.1",
    "vitest": "^1.0.4"
  }
}
